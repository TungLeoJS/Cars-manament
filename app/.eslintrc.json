{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {},
      {
        "usePrettierrc": true
      }
    ],
    "no-duplicate-imports": 1,
    "no-template-curly-in-string": 2,
    "no-use-before-define": 2,
    "camelcase": 2,
    "dot-notation": 1,
    "no-console": 1,
    "jsx-quotes": ["error", "prefer-single"],
    "no-var": 2,
    "no-unused-vars": 2,
    "func-names": 0,
    "react/prop-types": 0
  }
}
